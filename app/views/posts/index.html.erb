<h1>Time entries</h1>

<div class="container-fluid">
	<div class="row">
		<div class="col-md-12">
			<table class="table">
				<thead>
					<tr>
						<th>
							#
						</th>
						<th>
							Name
						</th>
            <th>
							Date
						</th>
						<th>
							Content
						</th>
            <th>
							Optiones
						</th>
					</tr>
				</thead>
				<tbody>
          <% @posts.each do |post| %>
            <tr>
              <td>
                <%= post.id %>
              </td>
              <td>
                <%= post.date %>
              </td>
              <td>
                <%= post.user.full_name %>
              </td>
              <td>
                <%= post.rationale %>
              </td>
              <td>
                <%= link_to "Edit", edit_post_path(post), id: "post_#{post.id}" %>

                <%= link_to "Delete", post_path(post), method: :delete, id: "delete_post_#{post.id}" %>
              </td>
            </tr>
          <% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>